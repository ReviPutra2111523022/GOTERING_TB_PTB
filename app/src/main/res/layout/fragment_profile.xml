<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment"
    >

    <TextView
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseImageButton"
        android:text="halooopengguna"
        android:gravity="center"
        android:textSize="25sp"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/photo_profile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="131dp"
        android:contentDescription="@string/profile_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        android:padding="20dp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/chooseImageButton"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_below="@id/photo_profile"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="134dp"
        android:text="Choose Image"
        android:textSize="10sp" />


    <Button
        android:id="@+id/editprofileButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editTextEmail"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="19dp"
        android:gravity="center_horizontal"
        android:text="Edit Profile"
        android:textSize="19sp"
        android:layout_centerInParent="true">

    </Button>

    <Button
        android:id="@+id/tambahmenuButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/editprofileButton"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Tambah Menu"
        android:textSize="19sp"
        android:layout_centerInParent="true">

    </Button>

    <Button
        android:id="@+id/transaksiButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tambahmenuButton"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Transaksi "
        android:textSize="19sp"
        android:layout_centerInParent="true">
    </Button>

    <Button
        android:id="@+id/tentangkamiButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/transaksiButton"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Tentang Kami "
        android:textSize="19sp">

    </Button>
    <Button
        android:id="@+id/exitButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tentangkamiButton"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="Keluar"
        android:textSize="19sp"
        android:layout_centerInParent="true">

    </Button>

    <TextView
        android:id="@+id/goteringprofilename"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/exitButton"
        android:text="GOTERING.com"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:textColor="#838080">

    </TextView>

    <TextView
        android:id="@+id/goteringprofileversion"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@+id/goteringprofilename"
        android:text="V.1.1.1.1.1.1.1."
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:textColor="#838080">

    </TextView>








</RelativeLayout>