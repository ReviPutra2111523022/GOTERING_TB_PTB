<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailmenumakanan.RendangDagingActivity">

  <ImageView
      android:id="@+id/rendangdaging"
      android:layout_width="match_parent"
      android:layout_height="400dp"
      android:src="@drawable/rendangdaging"
      android:scaleType="centerCrop"/>


  <TextView
      android:id="@+id/namarendangdaging"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/rendangdaging"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="23dp"
      android:layout_marginTop="8dp"
      android:layout_marginEnd="17dp"
      android:layout_marginBottom="10dp"
      android:text="Rendang Daging"
      android:textSize="25sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/hargarendangdaging"
      android:layout_width="match_parent"
      android:layout_height="30dp"
      android:layout_below="@id/namarendangdaging"
      android:layout_centerInParent="true"
      android:layout_marginStart="25dp"
      android:layout_marginTop="2dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="25dp"
      android:text="IDR 25.000"
      android:textSize="25sp" />

  <TextView
      android:id="@+id/jumlahrendangdaging"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:layout_below="@+id/hargarendangdaging"
      android:layout_alignParentStart="true"
      android:layout_alignParentEnd="true"
      android:layout_marginStart="23dp"
      android:layout_marginEnd="17dp"
      android:layout_marginBottom="10dp"
      android:text="JUMLAH:"
      android:textSize="20sp"
      android:textStyle="bold" />

  <Button
      android:layout_width="60dp"
      android:layout_height="50dp"
      android:layout_alignBaseline="@id/jumlahrendangdaging"
      android:layout_alignRight="@id/jumlahrendangdaging"
      android:text="-"
      android:layout_marginRight="100dp"
      android:backgroundTint="#009688" />

  <TextView
      android:layout_width="10dp"
      android:layout_height="40dp"
      android:layout_alignBaseline="@id/jumlahrendangdaging"
      android:layout_alignRight="@id/jumlahrendangdaging"
      android:text="0"
      android:layout_marginRight="75dp"
      android:backgroundTint="#009688"
      android:textSize="20sp"
      android:layout_centerInParent="true" />

  <Button
      android:layout_width="60dp"
      android:layout_height="50dp"
      android:layout_alignBaseline="@id/jumlahrendangdaging"
      android:layout_alignRight="@id/jumlahrendangdaging"
      android:text="+"
      android:backgroundTint="#009688"
      />
  <TextView
      android:id="@+id/totalrendangdaging"
      android:layout_width="70dp"
      android:layout_height="40dp"
      android:layout_below="@+id/jumlahrendangdaging"
      android:layout_alignParentStart="true"
      android:layout_marginStart="23dp"
      android:layout_marginBottom="10dp"
      android:text="TOTAL:"
      android:textSize="20sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/totalhargarendangdaging"
      android:layout_width="70dp"
      android:layout_height="40dp"
      android:layout_below="@+id/jumlahrendangdaging"
      android:layout_alignParentStart="true"
      android:layout_marginStart="260dp"
      android:layout_marginBottom="10dp"
      android:text="IDR.0"
      android:textSize="20sp"
      android:textStyle="bold" />

  <Button
      android:id="@+id/Tambahkan"
      android:layout_width="250dp"
      android:layout_height="50dp"
      android:backgroundTint="#009688"
      android:text="TAMBAHKAN"
      android:layout_below="@id/totalrendangdaging"
      android:gravity="center"
      android:layout_centerInParent="true"
      android:layout_marginTop="20dp"/>


</RelativeLayout>